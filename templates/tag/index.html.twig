{% extends 'base.html.twig' %}

{% block title %}
    Tags page
{% endblock %}

{% block body %}




    <div class="container">
        <h1 class="mt-4">Tags</h1>
        <div class="row mt-4">
            <div class="col-md-12">

                    {% if tags is not empty %}
                        <ul class="list-group">
                            {% for tag in tags %}
                                {% include 'tag/partials/tag.html.twig' with {tag: tag} only%}
                            {% endfor %}

                        </ul>

                    {% else %}
                        <h4>Aucun tag trouv√© !</h4>
                    {% endif %}
            </div>
        </div>
    </div>





{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/{{ asset('css/style.css') }}">
{% endblock %}
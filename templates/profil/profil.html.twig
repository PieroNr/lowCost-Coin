{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <div class="mt-3">
                                    <h4>{{ user.firstname }} {{ user.lastname }}</h4>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            {% if app.user and app.user.id == user.id %}
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Firstname</h6>
                                    </div>
                                    <div class="form-floating col-sm-9 text-secondary">
                                        <input type="text" value="" name="email" class="form-control" id="floatingInput" required="" autofocus="" placeholder="Firstname">
                                        <label style="margin-left: 8px" for="floatingInput">{{ user.firstname }}</label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Lastname</h6>
                                    </div>
                                    <div class="form-floating col-sm-9 text-secondary">
                                        <input type="text" value="" name="email" class="form-control ml-3" id="floatingInput" required="" autofocus="" placeholder="Lastname">
                                        <label style="margin-left: 8px" for="floatingInput">{{ user.lastname }}</label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Password</h6>
                                    </div>
                                    <div class="form-floating col-sm-9 text-secondary">
                                        <input type="password" value="" name="email" class="form-control ml-3" id="floatingInput" required="" autofocus="" placeholder="Password">
                                        <label style="margin-left: 8px" for="floatingInput">{{ user.password }}</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="button" class="btn btn-primary px-4" value="Save Changes">
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}